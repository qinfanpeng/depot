<% cache line_item do %>
<% if @current_line_item == line_item %>
  <tr id='tr_current_update'>
<% else %>
  <tr>
<% end %>
  <td><%= line_item.quantity%> &times</td>
  <td><%= line_item.product.title %></td>
  <td><%= number_to_currency(line_item.total_price, unit: "&yen;")  %></td>
</tr>
<% end %>
