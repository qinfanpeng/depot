<!DOCTYPE html>
<html>
<head>
  <title>my store</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= form_tag set_locale_path, class: 'locale' do %>
  <%= select_tag 'locale',
      options_for_select(LANGUAGES, I18n.locale.to_s),
      prompt: '切换语言',
      :onchange => 'this.form.submit()' %>
<% end %>

<div id='div_main'>
  <%= yield %>
</div>

<div id='div_side'>
  <div id='cart'>
    <%= render @cart %>
  </div>
</div>

</body>
</html>
